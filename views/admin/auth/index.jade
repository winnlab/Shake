doctype html
html(lang="ru")
	head
		title= Вход
		link(rel='stylesheet' href='../css/admin/bootstrap.min.css')
		link(rel='stylesheet' href='../css/admin/auth.css')
		script(src='../js/jquery-1.11.1.min.js')
		script(src='../js/admin/bootstrap.min.js')
	body
		.container
			.row
				.col-sm-6.col-md-4.col-md-offset-4
					h2.text-center.login-title= 'Введите логин и пароль'
					.account-wall
						img.profile-img(src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120")
						form.form-signin(action="login" method="POST")
							input.form-control(type="text" name="username" placeholder="Логин" required autofocus)
							input.form-control(type="password" name="password" placeholder="Пароль" required)
							button.btn.btn-lg.btn-primary.btn-block(type="submit")= "Войти"
							a.pull-right.need-help(href="#")= "Забыли пароль?"
							span.clearfix
						.temp= message