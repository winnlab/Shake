extends ../layout	

block append scripts
	script(type="text/javascript" src="/js/admin/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js")
	script(type="text/javascript").
		$(function() {
			$(".textarea").wysihtml5();
		});

block content
	.content-header
		h1= "Редактирование товара"

	.content.row
		.col-md-12
			.box.box-primary
				.box-header
				form.form-horizontal(role="form" method="POST" action!="/admin/product/save/" enctype="multipart/form-data")
					input(type="hidden" name="_id" value=product._id)
					.box-body
						.form-group
							label.col-md-2.control-label(for="name")= "Название:"
							.col-md-10
								input.form-control(type="text" value=product.name name="name" placeholder="Наименование продукта")
								.help.help-block
						.form-group
							label.col-md-2.control-label(for="description")= "Описание:"
							.col-md-10
								textarea.textarea(name="description" placeholder="Описание продукта" style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;") #{product.description}
								.help.help-block
						.form-group
							label.col-md-2.control-label(for="position")= "Позиция:"
							.col-md-10
								input.form-control(type="text" value=product.position name="position" placeholder="Позиция продукта")
								.help.help-block
						.form-group
							label.col-md-2.control-label(for="active")= "Активный:"
							.col-md-10
								- if (product.active)
									input(type="checkbox" name="active" value="1" checked)
								- else 
									input(type="checkbox" name="active" value="1")
								.help.help-block
						.form-group
							label.col-md-2.control-label(for="bottle")= "Бутылка:"
							.col-md-4
								input.form-control(type="file" name="bottle")
								.help.help-block
							label.col-md-2.control-label(for="bottle_thumb")= "Мини бутылка:"
							.col-md-4
								input.form-control(type="file" name="bottle_thumb")
								.help.help-block
							label.col-md-2.control-label(for="bottle")= "Банка:"
							.col-md-4
								input.form-control(type="file" name="jar")
								.help.help-block
							label.col-md-2.control-label(for="bottle")= "Мини банка:"
							.col-md-4
								input.form-control(type="file" name="jar_thumb")
								.help.help-block

					.box-footer
						button.btn.btn-primary(type="submit")= "Сохранить изменения"